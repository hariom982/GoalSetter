<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/goalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Title"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/goalDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goal Description"
        android:textColor="@color/black"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Due Date"
        android:textSize="18dp"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:drawableLeft="@drawable/baseline_calendar_today_24"
        />

    <TextView
        android:id="@+id/goalDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due Date"
        android:textColor="@color/black"
        android:paddingBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your Progress"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/baseline_flag_24"
        />
    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="0% Completed"
        android:paddingBottom="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tasks"
        android:textSize="18dp"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:drawableLeft="@drawable/baseline_checklist_24"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tasksRecyclerView"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
