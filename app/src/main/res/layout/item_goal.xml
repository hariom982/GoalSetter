<!-- res/layout/item_goal.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="369dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="15dp"
    android:backgroundTint="#EDE8E8"
    android:layout_gravity="center_horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#EDE8E8"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="69dp"
            android:src="@drawable/baseline_flag_24" />

        <LinearLayout
            android:layout_width="234dp"
            android:layout_height="match_parent"
            android:background="#EDE8E8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titletv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptiontv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="description"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="20dp" />


    </LinearLayout>


    <TextView
        android:id="@+id/duedatetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:drawableLeft="@drawable/baseline_calendar_today_24"
        android:drawablePadding="10dp"
        android:text=""
        android:textColor="@color/black"
        android:layout_marginStart="240dp"/>

    <TextView
        android:id="@+id/pendingtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="showing pending tasks"
        android:textColor="@color/black"
        android:layout_gravity="bottom"
        android:layout_marginStart="15dp"/>


</androidx.cardview.widget.CardView>
